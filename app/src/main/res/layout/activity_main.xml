<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnViewGroupmates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Посмотреть одногруппников" />

        <Button
            android:id="@+id/btnAddGroupmate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить одногруппника" />

        <Button
            android:id="@+id/btnUpdateLastGroupmate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Обновить последнего одногруппника" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>